<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".Fragmen.aboutFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text=" " />

        <ImageView
            android:id="@+id/Belang"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="24dp"
            android:textSize="38sp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/belang" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollTopologi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
        <TextView
            android:id="@+id/textAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:text="tes" />

        <TextView
            android:id="@+id/textKD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-light"
            android:layout_below="@id/textAbout"
            android:textStyle="normal"
            android:text="tes" />

        <TextView
            android:id="@+id/textKi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-light"
            android:layout_below="@id/textKD"
            android:textStyle="normal"
            android:text="tes" />

        <TextView
            android:id="@+id/textKi4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-light"
            android:layout_below="@id/textAbout"
            android:textStyle="normal"
            android:text="tes" />
           <TextView
               android:id="@+id/space"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25sp"
               android:textColor="#000"
               android:fontFamily="sans-serif-light"
               android:layout_below="@id/textAbout"
               android:textStyle="normal"
               android:text=" " />
       </LinearLayout>
        </ScrollView>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>